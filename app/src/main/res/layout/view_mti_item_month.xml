<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/view_mti_month_width"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:minHeight="@dimen/view_mti_month_height"
    android:paddingBottom="@dimen/view_mti_month_lbl_padding_vertical"
    android:paddingEnd="@dimen/view_mti_month_lbl_padding_horizontal"
    android:paddingLeft="@dimen/view_mti_month_lbl_padding_horizontal"
    android:paddingRight="@dimen/view_mti_month_lbl_padding_horizontal"
    android:paddingStart="@dimen/view_mti_month_lbl_padding_horizontal"
    android:paddingTop="@dimen/view_mti_month_lbl_padding_vertical">

    <com.oriondev.Viti.ui.view.calendar.DotView
        android:id="@+id/mti_view_indicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/mti_month_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="8"
        android:textSize="@dimen/view_mti_month_lbl_text"
        tools:text="Feb\n17"/>

</FrameLayout>